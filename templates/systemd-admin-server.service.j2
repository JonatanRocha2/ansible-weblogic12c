[Unit]
Description=WebLogic Adminserver service

[Service]
Type=simple
WorkingDirectory={{ wls_domain_home }}/bin/
ExecStart={{ wls_domain_home }}/bin/startWebLogic.sh
ExecStop={{ wls_domain_home }}/bin/stopWebLogic.sh
User=oracle
Group=oinstall
KillMode=process
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
